@page
@model SWP_Steel.Pages.Admin.LoginModel
@{
}
<div class="content" style="margin: 100px 0;">
    <div class="container">
        <div class="row justify-content-center align-items-center my-5">
            <div class="col-md-6 login-box">
                <form action="" method="post" class="col-md-12">
                    <h3>Login</h3>
                    <div id="form-content">
                        <div class="msg-error" style="text-align:left">
                            @ViewData["msg"]
                        </div>
                        <div class="form-group">
                            <label for="username" class="form-text">Username:</label><br>
                            <input type="text" asp-for="Employee.Email" class="form-control"/><br/>
                            <span class="msg-error" asp-validation-for="Employee.Email"></span><br/>
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-text">Password:</label><br>
                            <input type="password" asp-for="Employee.Password" class="form-control"/><br/>
                            <span class="msg-error" asp-validation-for="Employee.Password"></span><br/>
                        </div>
                        <div class="form-group">

                            <input type="submit" name="login" class="btn btn-success btn-md" value="Login">
                        </div>
                        <div id="register-link" class="d-flex justify-content-center">
                            <p>Forgot password?</p>&nbsp;
                            <a href="~/client/forgot" class="">Reset here</a>
                        </div>
                        @* <div id="register-link" class="d-flex justify-content-center">
                            <p>Not a member?</p>&nbsp;
                            <a href="~/client/signup" class="">Register here</a>
                        </div>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>